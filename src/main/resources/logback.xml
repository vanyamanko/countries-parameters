<configuration>
<appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>/Users/vanyamanko/Documents/countries-parameters/logs/application.log</file>
    <encoder>
        <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
</appender>

<logger name="com.manko.countries.exceptions" level="error" additivity="false">
    <appender-ref ref="FILE" />
</logger>

<root level="info">
    <appender-ref ref="FILE" />
</root>
</configuration>
